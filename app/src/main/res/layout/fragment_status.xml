<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.stupidme.cooker.view.status.StatusFragment">

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:drawablePadding="16dp"
        android:drawableTop="@drawable/empty"
        android:gravity="center"
        android:text="@string/fragment_status_empty_text"
        android:textSize="21sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/status_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/blue_grey_600"
        android:orientation="horizontal">

        <Button
            android:id="@+id/status_home"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/status_button_home"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/status_exit"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/status_button_exit"
            android:textColor="#ffffff" />
    </LinearLayout>

</FrameLayout>
