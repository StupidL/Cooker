<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/key_pref_general_use_custom_theme"
        android:summary="@string/pref_general_use_custom_theme_summary"
        android:title="@string/pref_general_use_custom_theme_title" />

    <ListPreference
        android:defaultValue="0"
        android:dependency="@string/key_pref_general_use_custom_theme"
        android:entries="@array/pref_general_choose_theme_entries"
        android:entryValues="@array/pref_general_choose_theme_values"
        android:key="@string/key_pref_general_use_custom_theme_choose"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_general_choose_theme_title" />

</PreferenceScreen>
